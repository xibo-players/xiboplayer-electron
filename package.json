{
  "name": "@xiboplayer/electron-pwa",
  "version": "0.9.0",
  "description": "Xibo Player - Electron Kiosk Wrapper for PWA",
  "main": "src/main.js",
  "author": "TecMan <pau@tecman.cat>",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/xibo/xibo-players",
  "repository": {
    "type": "git",
    "url": "https://github.com/xibo/xibo-players.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:rpm": "electron-builder --linux rpm",
    "build:deb": "electron-builder --linux deb",
    "build:appimage": "electron-builder --linux AppImage",
    "build:win": "electron-builder --windows",
    "build:all": "electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "electron-auto-launch": "^5.0.5"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "cat.tecman.xiboplayer",
    "productName": "XiboPlayer",
    "artifactName": "xibo-player-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist-packages",
      "buildResources": "resources"
    },
    "files": [
      "src/**/*",
      "package.json",
      "!node_modules/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/express/**/*",
      "node_modules/cors/**/*",
      "node_modules/electron-auto-launch/**/*"
    ],
    "extraResources": [
      {
        "from": "../pwa/dist",
        "to": "pwa",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Utility",
      "icon": "resources/icon.png",
      "executableName": "xibo-player",
      "desktop": {
        "Name": "Xibo Player",
        "Comment": "Digital Signage Player",
        "Type": "Application",
        "Categories": "Utility;AudioVideo;"
      }
    },
    "rpm": {
      "depends": [],
      "afterInstall": "resources/linux/after-install.sh",
      "afterRemove": "resources/linux/after-remove.sh"
    },
    "deb": {
      "depends": [],
      "afterInstall": "resources/linux/after-install.sh",
      "afterRemove": "resources/linux/after-remove.sh"
    },
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities",
      "icon": "resources/icon.icns"
    }
  }
}
